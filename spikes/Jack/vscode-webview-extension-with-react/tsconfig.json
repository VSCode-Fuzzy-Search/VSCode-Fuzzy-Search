{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6",
			"dom"
		],
		"baseUrl": "./src",
		"sourceMap": true,
		"paths" : {
			"*": ["*"],
		},
		"strict": false,   /* enable all strict type-checking options */
		"jsx": "react-jsx",
		"noUnusedParameters": false,  /* Report errors on unused parameters. */
		"noEmitHelpers": true,
		"importHelpers": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
