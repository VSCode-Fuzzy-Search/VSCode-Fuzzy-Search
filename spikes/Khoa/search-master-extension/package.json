{
  "name": "infinite-poc",
  "publisher": "ng",
  "displayName": "Search Master",
  "description": "Vs code extension poc",
  "version": "0.0.1",
  "icon": "media/icons/logo.png",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:infinite-poc.dialog-modal-message"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript-snippets.code-snippets"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "Search-master",
          "title": "Search Master",
          "icon": "media/icons/infinity-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "Search-master": [
        {
          "type": "webview",
          "id": "search-master-sidebar-panel",
          "name": "Search Master",
          "icon": "media/icons/beaker.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "infinite-poc.dialog-modal-message",
        "title": "Show Dialog Modal Message",
        "category": "searchmaster"
      },
      {
        "command": "infinite-poc.ask-user",
        "title": "Ask user a question?",
        "category": "searchmaster"
      },
      {
        "command": "searchmaster.print.explorer.menu",
        "title": "Print text in output channel",
        "category": "searchmaster"
      },
      {
        "command": "searchmaster.print.editor.menu",
        "title": "Send & Print text in output channel",
        "category": "searchmaster"
      },
      {
        "command": "searchmaster.show.cache",
        "title": "Show cache",
        "category": "searchmaster"
      },
      {
        "command": "searchmaster.clear.cache",
        "title": "Clear Cache",
        "category": "searchmaster"
      },
      {
        "command": "searchmaster.show.secret.storage",
        "title": "Show value from Secret Storage",
        "category": "searchmaster"
      },
      {
        "command": "searchmaster.show.center.panel",
        "title": "Show center panel",
        "category": "searchmaster"
      },
      {
        "command": "searchmaster.send.data",
        "title": "transfer Data From Ts To Ui",
        "category": "searchmaster"
      }
    ],
    "submenus": [
      {
        "id": "searchmaster.editor.menu",
        "label": "searchmaster from editor",
        "icon": "$(code)"
      },
      {
        "id": "searchmaster.explorer.menu",
        "label": "searchmaster from explorer",
        "icon": "$(code)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "searchmaster.print.explorer.menu",
          "when": "false"
        },
        {
          "command": "searchmaster.print.editor.menu",
          "when": "false"
        },
        {
          "command": "searchmaster.send.data",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "submenu": "searchmaster.explorer.menu",
          "group": "navigation@1",
          "when": "resourceLangId == javascript"
        }
      ],
      "searchmaster.explorer.menu":[
        {
          "command": "searchmaster.print.explorer.menu",
          "group": "commands@1",
          "when": "resourceLangId == javascript"
        }
      ],
      "editor/context": [
        {
          "submenu": "searchmaster.editor.menu",
          "group": "navigation@1",
          "when": "resourceLangId == javascript"
        }
      ],
      "searchmaster.editor.menu":[
        {
          "command": "searchmaster.print.editor.menu",
          "group": "commands@1",
          "when": "isPrintContextMenu && resourceLangId == javascript"
        }
      ]
    },
    "configuration": {
        "title": "Search Master",
        "properties": {
          "searchmaster.welcom.message.enabled": {
            "type": "boolean",
            "default": true,
            "description": "enable/disable welcome message"
          },
          "searchmaster.welcom.message.emoji": {
            "type": "string",
            "enum": ["ðŸ‘‹", "ðŸ˜„", "ðŸ˜Ž"],
            "default": "ðŸ‘‹",
            "description": "select emoji"
        },
        "searchmaster.welcom.message.string": {
          "type": "string",
          "description": "please enter welcome message",
          "default": "Welcome to the searchmaster extension!"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
